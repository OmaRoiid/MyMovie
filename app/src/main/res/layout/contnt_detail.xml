<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ViewPage"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.omar_salem.mymovie.ui.DetailActivity"
    tools:showIn="@layout/activety_detail"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/Movie_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Layout_margin_left"
            android:text="@string/movie_til"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"

            />

        <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/layout_margin_top"
          android:layout_marginLeft="@dimen/Layout_margin_left"
          android:layout_below="@+id/Movie_titel"
          android:padding="@dimen/Padding_layout"
          android:textSize="15sp"

          />
        <com.github.ivbaranov.mfb.MaterialFavoriteButton
          android:id="@+id/favorite_btn_id"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_below="@+id/Movie_titel"
          android:layout_gravity="right"
          android:layout_marginRight="8dp"

          />
        <TextView
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Layout_margin_left"
            android:padding="@dimen/Padding_layout"
            android:text="@string/movie_over_view"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_below="@+id/title"
            />
        <TextView
            android:id="@+id/plotsynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Layout_margin_left"
            android:text="plotsynopsis"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/plot"
            />
        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Layout_margin_left"

            android:text="@string/user_rat"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_below="@+id/plotsynopsis"
            />
        <TextView
            android:id="@+id/user_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Layout_margin_left"
            android:padding="@dimen/Padding_layout"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/rating"
            />






    </LinearLayout>
    </ScrollView>
</RelativeLayout>